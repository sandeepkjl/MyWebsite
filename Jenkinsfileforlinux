pipeline {
    agent any



stages{

		stage('Install package'){
            
            steps {
                sh 'npm install'              
            }
        }
        
        stage('Build'){
            
            steps {
				
                sh 'sudo ng build'              
            }
        }

        stage('Create Docker Image'){
            
            steps {
				
                sh 'docker build . -t mywebsite1 '              
            }
        }

        
}
}
